            border: 1px solid var(--border);
            border-radius: 16px;
            transition: all 0.2s ease;
            backdrop-filter: blur(8px);
        }

        @media (prefers-color-scheme: light) {
            .footer-content { background: rgba(255, 255, 255, 0.85); }
        }

        .footer:hover .footer-content { border-color: var(--accent); }

        .footer-icon { font-size: 0.8rem; transition: transform 0.3s ease; }

        .footer.loading .footer-icon { animation: rotate 1s linear infinite; }

