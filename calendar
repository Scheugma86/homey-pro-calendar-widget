    <script>
        // ========== TEST MODE ==========
        // Use ?testdate=2024-12-24 in URL to simulate a date
        function getTestDate() {
            const params = new URLSearchParams(window.location.search);
            const testDate = params.get('testdate');
            if (testDate) {
                const parsed = new Date(testDate);
                if (!isNaN(parsed.getTime())) {
                    console.log('üß™ TEST MODE: Simulating date', testDate);
                    return parsed;
                }
            }
            return null;
        }

        function getCurrentDate() {
            const testDate = getTestDate();
            return testDate || new Date();
        }

        // ========== SPECIAL DATES CONFIGURATION ==========
        // Customize these for your own special days!
        const SPECIAL_DATES = {
            // Monthly anniversary day (e.g., the day you started dating)
            anniversaryDay: 22,
            // Wedding date
            weddingDay: { day: 1, month: 7, year: 2017 },
            // Birthdays (add as many as you want)
            birthdays: [
                { name: "Partner 1", day: 3, month: 8, year: 1993 },
                { name: "Partner 2", day: 23, month: 10, year: 1986 }
            ]
        };

        // ========== HOLIDAY CALCULATION (German) ==========
        // You can modify this for your country's holidays

        function getEasterSunday(year) {
            const a = year % 19;
            const b = Math.floor(year / 100);
            const c = year % 100;
            const d = Math.floor(b / 4);
            const e = b % 4;
            const f = Math.floor((b + 8) / 25);
            const g = Math.floor((b - f + 1) / 3);
            const h = (19 * a + b - d - g + 15) % 30;
            const i = Math.floor(c / 4);
            const k = c % 4;
            const l = (32 + 2 * e + 2 * i - h - k) % 7;
            const m = Math.floor((a + 11 * h + 22 * l) / 451);
            const month = Math.floor((h + l - 7 * m + 114) / 31) - 1;
            const day = ((h + l - 7 * m + 114) % 31) + 1;
            return new Date(year, month, day);
        }

        function getHolidays(year) {
            const easter = getEasterSunday(year);
            const holidays = [];

            // Fixed holidays (German)
            holidays.push({ date: new Date(year, 0, 1), name: "New Year üéÜ", emoji: "üéÜ" });
            holidays.push({ date: new Date(year, 0, 6), name: "Epiphany üëë", emoji: "üëë" });
            holidays.push({ date: new Date(year, 4, 1), name: "Labor Day üõ†Ô∏è", emoji: "üõ†Ô∏è" });
            holidays.push({ date: new Date(year, 9, 3), name: "German Unity Day üá©üá™", emoji: "üá©üá™" });
            holidays.push({ date: new Date(year, 10, 1), name: "All Saints ‚úùÔ∏è", emoji: "‚úùÔ∏è" });
            holidays.push({ date: new Date(year, 11, 24), name: "Christmas Eve üéÑ", emoji: "üéÑ" });
            holidays.push({ date: new Date(year, 11, 25), name: "Christmas Day üéÑ", emoji: "üéÑ" });
            holidays.push({ date: new Date(year, 11, 26), name: "Boxing Day üéÑ", emoji: "üéÑ" });
            holidays.push({ date: new Date(year, 11, 31), name: "New Year's Eve üéá", emoji: "üéá" });

            // Easter-based holidays
            const goodFriday = new Date(easter);
            goodFriday.setDate(easter.getDate() - 2);
            holidays.push({ date: goodFriday, name: "Good Friday ‚úùÔ∏è", emoji: "‚úùÔ∏è" });

            holidays.push({ date: new Date(easter), name: "Easter Sunday üê∞", emoji: "üê∞" });

            const easterMonday = new Date(easter);
            easterMonday.setDate(easter.getDate() + 1);
            holidays.push({ date: easterMonday, name: "Easter Monday üê∞", emoji: "üê∞" });

            const ascension = new Date(easter);
            ascension.setDate(easter.getDate() + 39);
            holidays.push({ date: ascension, name: "Ascension Day ‚úùÔ∏è", emoji: "‚úùÔ∏è" });

            const whitSunday = new Date(easter);
            whitSunday.setDate(easter.getDate() + 49);
            holidays.push({ date: whitSunday, name: "Whit Sunday üïäÔ∏è", emoji: "üïäÔ∏è" });

            const whitMonday = new Date(easter);
            whitMonday.setDate(easter.getDate() + 50);
            holidays.push({ date: whitMonday, name: "Whit Monday üïäÔ∏è", emoji: "üïäÔ∏è" });

            return holidays;
        }

        function getHolidayForDate(date, holidays) {
            const dateStr = getDayKey(date);
            return holidays.find(h => getDayKey(h.date) === dateStr);
        }

        // ========== SPECIAL DAY DETECTION ==========

        function getSpecialDayInfo(date) {
            const day = date.getDate();
            const month = date.getMonth() + 1;
            const year = date.getFullYear();

            // Wedding anniversary
            if (day === SPECIAL_DATES.weddingDay.day && month === SPECIAL_DATES.weddingDay.month) {
                const years = year - SPECIAL_DATES.weddingDay.year;
                return { type: 'wedding', name: `${years}. Wedding Anniversary üíç`, years: years, priority: 1 };
            }

            // Birthdays
            for (const bday of SPECIAL_DATES.birthdays) {
                if (day === bday.day && month === bday.month) {
                    const age = year - bday.year;
                    return { type: 'birthday', name: `${bday.name}'s ${age}. Birthday üéÇ`, age: age, priority: 2, person: bday.name };
                }
            }

            // Monthly anniversary
            if (day === SPECIAL_DATES.anniversaryDay) {
                return { type: 'anniversary', name: `Anniversary Day üíï`, priority: 3 };
            }

            return null;
        }

        // ========== SEASONAL ANIMATIONS ==========

        function calculateIntensity(daysUntil) {
            if (daysUntil <= 0 && daysUntil >= -2) return 1.0;
            if (daysUntil > 26) return 0;
            return 0.3 + (0.7 * (1 - daysUntil / 26));
        }

        function checkSeasonalAnimations() {
            const now = getCurrentDate();
            const day = now.getDate();
            const month = now.getMonth() + 1;
            const year = now.getFullYear();

            const specialDay = getSpecialDayInfo(now);

            // Wedding anniversary
            if (specialDay && specialDay.type === 'wedding') {
                activateWeddingMode(1.0);
                return 'wedding';
            }

            // Birthday
            if (specialDay && specialDay.type === 'birthday') {
                activateBirthdayMode(specialDay.person, 1.0);
                return 'birthday';
            }

            // Christmas: December 25
            const christmas = new Date(year, 11, 25);
            let daysToChristmas = Math.ceil((christmas - now) / (1000 * 60 * 60 * 24));

            // Easter
            let easter = getEasterSunday(year);
            let daysToEaster = Math.ceil((easter - now) / (1000 * 60 * 60 * 24));

            if (daysToEaster < -7) {
                easter = getEasterSunday(year + 1);
                daysToEaster = Math.ceil((easter - now) / (1000 * 60 * 60 * 24));
            }

            // Anniversary during Christmas season
            if (day === SPECIAL_DATES.anniversaryDay && daysToChristmas <= 26 && daysToChristmas >= -2) {
                const christmasIntensity = calculateIntensity(daysToChristmas);
                activateAnniversaryChristmasMode(christmasIntensity);
                return 'anniversary-christmas';
            }

            // Anniversary during Easter season
            if (day === SPECIAL_DATES.anniversaryDay && daysToEaster <= 26 && daysToEaster >= -2) {
                const easterIntensity = calculateIntensity(daysToEaster);
                activateAnniversaryEasterMode(easterIntensity);
                return 'anniversary-easter';
            }

            // Regular anniversary day
            if (day === SPECIAL_DATES.anniversaryDay) {
                activateAnniversaryMode(1.0);
                return 'anniversary';
            }

            // Christmas mode
            if (daysToChristmas <= 26 && daysToChristmas >= -2) {
                const intensity = calculateIntensity(daysToChristmas);
                activateChristmasMode(intensity);
                return 'christmas';
            }

            // Easter mode
            if (daysToEaster <= 26 && daysToEaster >= -2) {
                const intensity = calculateIntensity(daysToEaster);
                activateEasterMode(intensity);
                return 'easter';
            }

            deactivateAllSeasons();
            return null;
        }

        function deactivateAllSeasons() {
            document.getElementById('snowContainer').style.display = 'none';
            document.getElementById('snowGround').style.display = 'none';
            document.getElementById('snowSparkle').style.display = 'none';
            document.getElementById('christmasAccent').style.display = 'none';
            document.getElementById('easterContainer').style.display = 'none';
            document.getElementById('easterGround').style.display = 'none';
            document.getElementById('easterAccent').style.display = 'none';
            document.getElementById('anniversaryContainer').style.display = 'none';
            document.getElementById('anniversaryGround').style.display = 'none';
            document.getElementById('anniversaryAccent').style.display = 'none';
            document.getElementById('birthdayContainer').style.display = 'none';
            document.getElementById('birthdayGround').style.display = 'none';
            document.getElementById('birthdayAccent').style.display = 'none';
            document.getElementById('weddingContainer').style.display = 'none';
            document.getElementById('weddingGround').style.display = 'none';
            document.getElementById('weddingAccent').style.display = 'none';
        }

        function activateChristmasMode(intensity = 1.0) {
            deactivateAllSeasons();

            const container = document.getElementById('snowContainer');
            const ground = document.getElementById('snowGround');
            const sparkle = document.getElementById('snowSparkle');
            const accent = document.getElementById('christmasAccent');

            container.style.display = 'block';
            ground.style.display = 'block';
            sparkle.style.display = 'block';
            accent.style.display = 'block';

            const snowflakeCount = Math.floor(15 + (intensity * 35));
            container.innerHTML = '';
            const snowflakes = ['‚ùÑ', '‚ùÖ', '‚ùÜ', '‚úª', '‚úº', '‚ùâ', '‚Ä¢', '‚àó'];

            for (let i = 0; i < snowflakeCount; i++) {
                const flake = document.createElement('div');
                flake.className = 'snowflake';
                flake.textContent = snowflakes[Math.floor(Math.random() * snowflakes.length)];
                flake.style.left = Math.random() * 100 + '%';
                flake.style.animationDuration = (Math.random() * 6 + 6) + 's';
                flake.style.animationDelay = (Math.random() * 12) + 's';
                flake.style.fontSize = (Math.random() * 0.7 + 0.5) + 'rem';
                flake.style.opacity = Math.random() * 0.4 + 0.5;
                container.appendChild(flake);
            }

            const sparkleCount = Math.floor(5 + (intensity * 15));
            sparkle.innerHTML = '';
            for (let i = 0; i < sparkleCount; i++) {
                const sp = document.createElement('div');
                sp.className = 'sparkle';
                sp.style.left = Math.random() * 100 + '%';
                sp.style.bottom = Math.random() * 30 + 'px';
                sp.style.animationDelay = Math.random() * 2 + 's';
                sparkle.appendChild(sp);
            }

            ground.style.opacity = 0.5 + (intensity * 0.5);
        }

        function activateAnniversaryChristmasMode(intensity = 1.0) {
            activateChristmasMode(intensity);

            const container = document.getElementById('snowContainer');
            const hearts = ['üíï', '‚ù§Ô∏è', 'üíó', 'üíñ'];
            const heartCount = Math.floor(5 + (intensity * 8));

            for (let i = 0; i < heartCount; i++) {
                const heart = document.createElement('div');
                heart.className = 'snowflake';
                heart.textContent = hearts[Math.floor(Math.random() * hearts.length)];
                heart.style.left = Math.random() * 100 + '%';
                heart.style.animationDuration = (Math.random() * 5 + 7) + 's';
                heart.style.animationDelay = (Math.random() * 10) + 's';
                heart.style.fontSize = '1rem';
                heart.style.opacity = '0.85';
                container.appendChild(heart);
            }

            document.getElementById('christmasAccent').textContent = 'üéÑüíï';
        }

